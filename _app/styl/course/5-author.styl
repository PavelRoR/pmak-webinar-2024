#author
	background-color #fff
	padding 0 0 260px
	margin-bottom: -60px
	position relative
	z-index 44
	color: #000
	@media screen and (max-width 1199px)
		padding 0 0 160px
	@media screen and (max-width 560px)
		padding 0 0 100px
		margin-bottom: -40px
	@media screen and (max-width 386px)
		padding 0 0 60px
		margin-bottom: 25px
.author-img
	position relative
	img
		display block
		width 100%
		max-width 525px
		@media screen and (max-width 991px)
			margin-bottom: 35px
		@media screen and (max-width 560px)
			margin-bottom: 25px
	&-text
		color #fff
		font-size: 28px
		font-weight: bold
		position absolute
		bottom: 0
		left 0
		padding 0 45px 45px
		width 100%
		max-width 470px
		@media screen and (max-width 991px)
			padding 0 35px 35px
		@media screen and (max-width 560px)
			font-size: 24px
		@media screen and (max-width 386px)
			font-size: 18px
			padding 0 25px 25px
.general-title-author
	small
		display block
		margin 50px 0 40px
		font-family: I
		font-weight: normal
		font-size: 28px
		@media screen and (max-width 991px)
			margin 0 0 10px