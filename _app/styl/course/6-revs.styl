#revs
	padding 200px 0
	border-radius: 58px 58px 0 0
	position relative
	z-index 45
	background-color: #000
	@media screen and (max-width 1199px)
		padding 100px 0
	@media screen and (max-width 560px)
		padding 60px 0 100px
		border-radius: 40px 40px 0 0
	@media screen and (max-width 386px)
		padding 60px 0 75px
		border-radius: 25px 25px 0 0
.revs-slider-text
	width 100%
	max-width 1170px
	margin 0 auto
	@media screen and (max-width 1199px)
		max-width 950px
	@media screen and (max-width 991px)
		max-width 750px
	@media screen and (max-width 767px)
		max-width none
		// left 15px
// 	@media screen and (max-width 386px)
// 		width 120%
// 		margin 0 -30px 0 -15px
.text-rev-link
	@media screen and (max-width 767px)
		margin-right: 20px
.text-rev-img
	height: 250px
	object-fit: contain
	object-position: center
	width 320px
	background-color #D9D9D9
	border-radius: 15px
	display block
	margin: 0 auto
	// padding 0 10px
	cursor e-resize
	@media screen and (max-width 991px)
		margin-left: 15px
	@media screen and (max-width 560px)
		height: 200px
		width 230px !important
