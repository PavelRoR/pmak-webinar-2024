#plan
	padding 90px 0 35px
	margin-top: 180px
	background-color: #CCEDE3
	@media screen and (max-width 991px)
		margin-top: 90px
	@media screen and (max-width 767px)
		padding 90px 0 50px
	@media screen and (max-width 550px)
		margin-top: 180px
	@media screen and (max-width 500px)
		margin-top: 120px
	@media screen and (max-width 480px)
		padding 60px 0 35px
	@media screen and (max-width 425px)
		margin-top: 75px
	// @media screen and (max-width 386px)
	// 	margin-top: 30px
.lessons-list
	display flex
	flex-direction: row
	flex-wrap: wrap
	align-items: flex-start
	justify-content: space-between
	 counter-reset: my-counter;
	li
		list-style none
		width 30%
		margin: 0 auto 55px
		position relative
		font-size: 20px
		padding-top: 55px
		counter-increment: my-counter;
		@media screen and (max-width 991px)
			width 46%
		@media screen and (max-width 767px)
			width 98%
			margin-bottom: 35px
		@media screen and (max-width 560px)
			font-size: 16px
			padding-top: 40px
			margin-bottom: 25px
		&:before
			content: '/' counter(my-counter) 
			// counter-increment: item
			position absolute
			top 0
			right: 0
			font-family: 'FreeSetExtraCTTRegular',sans-serif;
			font-size: 38px;
			color #fff
			@media screen and (max-width 767px)
				left 0
				right auto
			@media screen and (max-width 560px)
				font-size: 32px