#prices
	padding 260px 0
	border-radius: 58px 58px 0 0
	margin-bottom: -60px
	position relative
	z-index 43
	background-color #fff
	@media screen and (max-width 1199px)
		padding 100px 0 160px
	@media screen and (max-width 767px)
		.container-wrap
			position relative
			width 100%
			padding 0
	@media screen and (max-width 560px)
		padding 60px 0 160px
		margin-bottom: -40px
		border-radius: 40px 40px 0 0
	@media screen and (max-width 386px)
		padding 60px 0 125px
		margin-bottom: -25px
		border-radius: 25px 25px 0 0
.packet
	&s
		position relative
		display flex
		flex-direction: row
		align-items: flex-start
		justify-content: space-between
		width 100%
		max-width 1170px
		margin 0 auto
		@media screen and (max-width 1199px)
			max-width 970px
		@media screen and (max-width 992px)
			max-width 950px
		@media screen and (max-width 767px)
			// left: 15px
			width 100%
			max-width none
			// margin 0
		// @media screen and (max-width 767px)
		// 	width 130% !important
		// 	margin: 0 0 0 -15px
	width 100%
	max-width 560px
	text-align center
	position relative
	@media screen and (max-width 1199px)
		max-width 460px
	@media screen and (max-width 991px)
		width 100%
		max-width 350px
	@media screen and (max-width 767px)
		margin-left: 15px
		// width calc(100% - 60px)
		// width 100%
	@media screen and (max-width 560px)
		max-width 230px
	&-head
		background-color: #000
		border-radius: 69px 69px 0 0
		padding 30px 30px 73px
		margin-bottom: -42px
		@media screen and (max-width 560px)
			padding 10px 20px 60px
		&-title
			font-family: S
			font-size: 60px
			font-weight: normal
			@media screen and (max-width 991px)
				font-size: 50px
			@media screen and (max-width 560px)
				font-size: 26px
			small
				display block
				font-family: I
				font-size: 28px
				@media screen and (max-width 991px)
					font-size: 24px
				@media screen and (max-width 560px)
					font-size: 16px
	&-body
		border-radius: 42px
		background-color: #DFF4FD
		color #000
		padding: 95px 45px 45px
		@media screen and (max-width 991px)
			padding 45px 30px
		@media screen and (max-width 560px)
			padding 40px 20px 30px
	&-or
		display flex
		align-items: center
		justify-content: center
		width 120px
		text-align center
		position absolute
		top 280px
		left -70px
		right 0
		// margin 0 auto
		font-family: S
		font-size: 40px
		font-weight: 900
		background-color: #000
		border-radius: 30px
		padding 0 22px 12px
		line-height: 1
		height: 87px
		@media screen and (max-width 1199px)
			width 100px
			font-size: 32px
			left -60px
			height: 70px
			top 290px
		@media screen and (max-width 991px)
			top auto
			bottom: 130px
			font-size: 28px
			border-radius: 25px
			height: 60px
			top auto
			bottom: 150px
			left -80px
			width 140px
		// @media screen and (max-width 767px)
		// 	left -80px
		@media screen and (max-width 560px)
			width 78px
			height: 43px
			font-size: 20px
			padding 2px 15px 8px
			line-height: 43px
			bottom: 98px
			left: -50px
.cost
	font-family: S
	font-weight: 900
	&-sale
		font-size: 90px
		@media screen and (max-width 1199px)
			font-size: 75px
		@media screen and (max-width 991px)
			font-size: 60px
		@media screen and (max-width 767px)
			font-size: 45px
		@media screen and (max-width 560px)
			font-size: 38px
	&-full
		color #4E97B6
		font-size: 40px
		margin-bottom: 90px
		@media screen and (max-width 991px)
			font-size: 32px
			margin-bottom: 60px
		@media screen and (max-width 560px)
			font-size: 20px
			margin-bottom: 45px
		span
			text-decoration line-through
	&-text
		font-size: 28px
		text-transform uppercase
		margin 35px 0 45px
		@media screen and (max-width 991px)
			font-size: 24px
		@media screen and (max-width 560px)
			font-size: 16px
			margin 10px 0
.button-cost
	background-image: none
	background-color: #40BDAE
	@media screen and (max-width 560px)
		font-size: 16px
		padding: 17px 35px
.prices-text
	text-align center
	font-size: 28px
	margin 135px 0
	color #000
	@media screen and (max-width 1199px)
		margin 100px 0
	@media screen and (max-width 991px)
		font-size: 24px
		margin 70px 0
	@media screen and (max-width 386px)
		font-size: 18px
		margin 40px 0
	span
		display inline-block
		font-weight: bold
		background-color: #000
		color #fff
		border-radius: 42px
		padding: 13px 10px
.instalment
	padding 60px 70px 30px
	background-color: #DFF4FD
	background-image: linear-gradient(31deg, #DFF4FD 0%, #C6F9DC 100%)
	border-radius: 69px
	display flex
	flex-direction: row
	align-items: center
	flex-wrap: wrap
	justify-content: space-between
	color #000
	@media screen and (max-width 991px)
		flex-direction: column
		padding 50px 60px
	@media screen and (max-width 560px)
		padding 40px 50px
		border-radius: 40px
	@media screen and (max-width 386px)
		padding 30px 20px
		border-radius: 20px
	.instalment-col-1
		width 53%
		@media screen and (max-width 991px)
			width 100%
	.instalment-col-2
		width 44%
		@media screen and (max-width 991px)
			width 100%
	&-title
		font-family: S
		font-size: 56px
		font-weight: bold
		margin-bottom: 50px
		@media screen and (max-width 1199px)
			font-size: 46px
		@media screen and (max-width 991px)
			margin-bottom: 0
			font-size: 36px
		@media screen and (max-width 560px)
			font-size: 32
		@media screen and (max-width 386px)
			font-size: 26px
	&-list
		li
			font-size: 28px
			list-style: none
			padding-left: 30px
			margin-bottom: 25px
			background: url(../img/icons/list-arrow.svg) no-repeat top 9px left
			&:last-child
				margin-bottom: 0
			@media screen and (max-width 560px)
				background-size: 12px auto
				background-position: top 9px left 
				font-size: 22px
			@media screen and (max-width 386px)
				font-size: 18px
				margin-bottom: 15px
				background-position: top 7px left 
				padding-left: 20px
	&-img
		display block
		margin 50px auto
		width 100%
		@media screen and (max-width 560px)
			margin 35px auto 30px
	&-text
		border-radius: 55px
		border: 3px solid #40BDAE
		padding: 20px 45px 30px
		font-size: 28px
		color #40BDAE
		@media screen and (max-width 991px)
			margin-top: 50px
		@media screen and (max-width 560px)
			font-size: 24px
			margin-top: 25px
			border-radius: 40px
			padding 20px 30px
		@media screen and (max-width 386px)
			font-size: 18px
			border-radius: 20px
			padding 20px
		span
			font-weight: bold