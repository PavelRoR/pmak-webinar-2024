#main
	padding 0 0 260px
	background: #000 url(../img/backs/main-course.png) no-repeat center
	background-size: cover
	color:  #fff
	text-align center
	margin-bottom: -60px
	position relative
	z-index 40
.main
	&-pre
		font-size: 28px
	&-title
		font-family: S
		font-size: 80px
		font-weight: bold
		text-transform uppercase
		color #C6F9DC
		margin 30px 0 35px
		line-height: 1.1
		@media screen and (max-width 1199px)
			font-size: 22px
		@media screen and (max-width 991px)
			width 45%
		@media screen and (max-width 650px)
			font-size: 20px
		@media screen and (max-width 550px)
			width 100%
			padding-top: 10px
		@media screen and (max-width 500px)
			width 90%
		@media screen and (max-width 425px)
			color #000
			font-size: 14px
	&-subtitle
		font-size: 28px
		margin: 0 auto 40px
		width 100%
		max-width 750px
		span
			font-weight: bold
