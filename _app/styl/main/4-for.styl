#for
#why
	padding 60px 0
.for-item
	position relative
	border-radius: 15px
	background-color: #CCEDE3
	margin-top: 70px
	padding 70px 70px 40px
	display flex
	align-items: center
	justify-content: center
	text-align center
	min-height 270px
	@media screen and (max-width 1199px)
		padding 70px 40px 40px
	@media screen and (max-width 991px)
		min-height 1px
	@media screen and (max-width 386px)
		padding 70px 30px 30px
	&-deepgreen
		background-color: #55B196
		color #fff
		padding 70px 40px 40px
		font-weight: 600
		@media screen and (max-width 386px)
			padding 70px 30px 30px
	&-img
		position absolute
		display block
		top -56px
		left 0
		right 0
		margin 0 auto