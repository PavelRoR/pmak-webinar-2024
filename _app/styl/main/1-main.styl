#main
	padding  0 0 60px
	background: #252A26 url(../img/backs/main.png) no-repeat center center
	background-size: cover
	color #fff
	@media screen and (max-width 650px)
		background-image: url(../img/backs/main-mob.png)
.main
	&-pre
		font-size: 28px
		display inline-block
		border-bottom: 2px solid #55B196
		padding-bottom: 5px
		margin-top: 75px
		@media screen and (max-width 991px)
			margin-top: 0
		@media screen and (max-width 650px)
			font-size: 22px
		@media screen and (max-width 480px)
			font-size: 20px
	&-title
		font-family: I
		font-size: 28px
		text-transform none
		margin 30px 0
		@media screen and (max-width 650px)
			font-size: 22px
		@media screen and (max-width 480px)
			font-size: 20px
		span
			font-family: FSE
			font-size: 48px
			text-transform uppercase
			position relative
			display block
			padding-top: 5px
			@media screen and (max-width 650px)
				font-size: 38px
			@media screen and (max-width 480px)
				font-size: 30px
			@media screen and (max-width 386px)
				font-size: 22px
			&:before
				content: '‚Äù'
				display block
				position absolute
				top 5px
				left -30px
				@media screen and (max-width 650px)
					position relative
					top 0
					display inline
					left 0
	&-date
		font-size: 24px
		font-weight: 900
		color #55B196
		line-height: 52px
		@media screen and (max-width 480px)
			font-size: 22px
		@media screen and (max-width 386px)
			font-size: 20px
		span
			display inline-block
			&:last-of-type
				margin-left: 20px
				padding-left: 20px
				position relative
				@media screen and (max-width 386px)
					margin-left: 15px
					padding-left: 15px
				&:before
					content: ''
					display block
					position absolute
					top 0
					left 0
					height: 100%
					width 2px
					background-color #fff
	&-text
		display flex
		flex-direction: row
		align-items: center
		width 100%
		max-width 460px
		margin 20px 0 60px
		@media screen and (max-width 650px)
			max-width none
		@media screen and (max-width 480px)
			margin-top: 40px
		img
			margin-right: 20px
			@media screen and (max-width 480px)
				width 80px
		p
			font-size: 18px
			margin-top: -22px
			@media screen and (max-width 650px)
				font-size: 22px
			@media screen and (max-width 480px)
				font-size: 20px
			@media screen and (max-width 386px)
				font-size: 18px
			span
				font-weight: bold