#author
	padding 60px 0 90px
	@media screen and (max-width 480px)
		padding 60px 0
.general-title-author
	margin-top: 60px
	@media screen and (max-width 1199px)
		margin-top: 0
	@media screen and (max-width 991px)
		display none
.general-title-author-mob
	display none
	@media screen and (max-width 991px)
		display block
.author-img
	display block
	width 100%
	max-width 453px
	margin 0 auto
.author-info
	display flex
	flex-direction: column-reverse
	align-content: space-between
	@media screen and (max-width 991px)
		display block
.author-item
	border-radius: 15px
	background-color: #77CEB4
	padding 60px 35px
	color #fff
	font-weight: 900
	margin-top: 25px
	line-height: 1.5
	@media screen and (max-width 1199px)
		margin-top: 30px
	@media screen and (max-width 991px)
		margin 20px 0 50px
	@media screen and (max-width 650px)
		font-size: 24px
	@media screen and (max-width 480px)
		font-size: 18px
		padding 40px 30px